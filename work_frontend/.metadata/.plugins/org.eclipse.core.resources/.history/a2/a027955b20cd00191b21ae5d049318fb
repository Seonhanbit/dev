<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="kor" xml:lang="ko">
<head>
<title>new document</title>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<script type="text/javascript">
	
	function theFnc() {
		alert("javascript");
	}

	function theFnc2() {
		alert("javascript2");
	}

	window.onload = function() {
		var myBtn1 = document.getElementById("btn1");

		if (myBtn1.addEventListener) { //1. 표준 브라우저일 경우 실행
			myBtn1.addEventListener("click", theFnc, false);
			myBtn1.addEventListener("click", theFnc2, false);
		} 
	}

	if (window.addEventListener) { //1. 표준 브라우저일 경우 실행
		window.addEventListener("load", theFnc, false);
	} else if (myBtn1.attachEvent) { //2. 비표준 브라우저(IE)일 경우 실행
		window.attachEvent("onload", theFnc)
	}
	
</script>

</head>

<body>
	<button id="btn1">버튼1</button>
	<button id="btn2">버튼2</button>
</body>
</html>
