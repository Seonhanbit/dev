<script type="text/javascript">
	var inter;
	function sayHello() {
		inter = window.setInterval(display, 100);
	}
	function display() {
		var dd = document.getElementById("dd");
		var darr = document.getElementsByTagName("div");
		var qd = document.querySelector("div");
		dd.innerHTML = "<h1>" + new Date() + "</h1>";
	}
	window.onload = function() {
		var b = document.getElementById("btnstart");
		//console.log(b);
		b.addEventListener("click", sayHello);
		document.getElementById('btnclear').addEventListener('click',
				function() {
					window.clearInterval(inter);
				});
		document.getElementById('btnloc').addEventListener('click', function() {
			window.location.href = "http://www.naver.com";
		});
		document.getElementById('btnsubmit').addEventListener('click',
				function() {
					//var form = document.getElementById('idform');
					//form.submit();
					nameform.submit();
				});
	}
	function go() {
		location.href = "http://www.nate.com"
	}
</script>
</head>
<body>
	<button id="btnstart">click me</button>
