<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="kor" xml:lang="ko">
<head>
  <title> new document </title>
	<meta http-equiv="content-type"  content="text/html; charset=utf-8" />
	<script type="text/javascript">		
		function loadFunc() {
			//getElementById
			var titleObj = document.getElementById("title");
			titleObj.setAttribute("style","color:#F00");
			//titleObj.style.color = "#f00";
			
			//getElementsByTagName
			var ulObj = document.getElementsByTagName("ul");
			var html = "";
			for (var i = 0; i < ulObj.length; i++) { 
				html += ulObj[i].innerText;
				alert(html);
				console.log(html);
			}//for
			
			//getElementsByTagName
			var liObj = ulObj[0].getElementsByTagName("li")[1];
			liObj.style.border = "solid 1px #f00";
			
			//getElementsByTagName
			var listzone = document.getElementById("list"); 
			var listObj = listzone.getElementsByTagName("li")[3];
			listObj.style.color = "blue";
			
			//parentNode
			var divObj =  document.getElementById("list").parentNode;
			alert(divObj.tagName);
			
			//childNodes
			var liObjs =  document.getElementById("list").childNodes;
			alert(liObjs.length);
			
			//firstChild
			var firstchild  =  document.getElementById("list").children[0];
			alert("FistChild : " + firstchild.innerHTML);
			
			//lastChild
			var childLen = document.getElementById("list").children.length-1;
			var lastchild = document.getElementById("list").children[childLen];
			alert("Last Child :" + lastchild.innerHTML);
			
			//previousSibiling
			//Node Type : Element Node(1), Attribute Node(2), Text Node(3)
			var prev = document.getElementById("title").previousSibling;
			alert("Node Type :" + prev.nodeType);
			
			//Element Node가 아니면 반복
			while(prev.nodeType != 1) 
				prev = prev.previousSibling;
			
			alert(prev.innerHTML);
			
		}//loadFunc
		
		if(window.addEventListener) {
			window.addEventListener("load",loadFunc,false);
		}else if(window.attachEvent) {
			window.attachEvent("onload",loadFunc);
		}
	</script>
</head>

<body>
<div>
	<h1>선택자</h1>
	<h2 id="title">원거리 선택자</h2>
	<ul>
			<li>getElementById</li>
			<li>getElementsByTagnName</li>
	</ul>
	<h2 id="title2">근거리 선택자</h2>
