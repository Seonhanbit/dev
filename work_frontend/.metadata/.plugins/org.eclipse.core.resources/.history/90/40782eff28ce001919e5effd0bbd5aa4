<style type="text/css">
button {
	width: 30pt;
	height: 30pt;
}
</style>
<script type="text/javascript"
	src="http://code.jquery.com/jquery-1.8.1.js"></script>
<script type="text/javascript">
	$(function() {
		var result = "";
		var calc = "";
		$(".num").on('click', function(evt) {
			calc += $(this).text();
			$("#show").val(calc);
		});
		$("#eq").on('click', function(evt) {
			console.log(calc);
			result = eval(calc);
			console.log(result);
			$("#show").val(result);
			//$("#result").innerText(calc+"="+result);
			calc = result;
		});
		$("#CE").on('click', function() {
			result = '';
			calc = '';
			$("#show").val(result);
		});
	});
</script>
</head>
