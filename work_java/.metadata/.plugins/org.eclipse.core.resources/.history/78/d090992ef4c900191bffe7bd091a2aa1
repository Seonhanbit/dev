package jungol;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.ArrayList;
import java.util.StringTokenizer;

public class s1828_냉장고 {
	static class XY implements Comparable<XY>{
		int x;
		int y;
		public XY(int a, int b) {
			x=a;
			y=b;
		}
		@Override
		public int compareTo(XY o) {
			if(this.x == o.x) {
				return this.y - o.y;
			}
			return this.x - o.x;
		}	
		
	}
//	static ArrayList<Integer> list = null;
//	static ArrayList<Integer> range(int a, int b) {
//		ArrayList<Integer> list = new ArrayList<>();
//		
//		
//		list.add(e)
//	}

	public static void main(String[] args) throws NumberFormatException, IOException {
		// TODO Auto-generated method stub
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		int n = Integer.parseInt(br.readLine());
		XY[] arr = new XY[n];
		for(int i=0; i<n; i++) {
			String str = br.readLine();
			StringTokenizer st = new StringTokenizer(str);
			arr[i] = new XY(Integer.parseInt(st.nextToken()), Integer.parseInt(st.nextToken()));
		}
		int cnt = 0;
		
		while(true) {
			boolean ck = false;
			for(int i=0; i<n; i++) {
				for(int j=i+1; j<n; j++) {
					if(arr[i]!=null&&arr[j]!=null) {
						if((arr[i].x<=arr[j].x&&arr[j].x>=arr[i].y)||
								(arr[i].y<=arr[j].x&&arr[j].y>=arr[i].y)) {
							arr[j] =null;
							ck=true;
						}
					}
				}
				arr[i]=null;
				cnt++;
			}
			if(ck==false) {
				break;
			}
		}
		System.out.println(cnt);
		
	}

}
