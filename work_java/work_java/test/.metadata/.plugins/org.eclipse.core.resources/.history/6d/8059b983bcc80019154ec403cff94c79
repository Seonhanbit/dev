package algo_sub;

import java.util.Scanner;

public class s2628_종이자르기 {
	static class XY {
		int x;
		int y;

		public XY(int a, int b) {
			x = a;
			y = b;
		}

		@Override
		public String toString() {
			return "XY [x=" + x + ", y=" + y + "]";
		}
	}
	
