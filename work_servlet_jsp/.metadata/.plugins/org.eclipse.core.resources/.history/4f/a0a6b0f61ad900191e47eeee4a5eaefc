<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Login</title>
<script>
	function checking() {
		var id = document.getElementById("name").value;
		var pw = document.getElementById("pwword").value;

		var cf = confirm("로그인 하시겠습니까?");
		if (cf) {
			if (id == "")
				alert("ID를 입력해주세요.");
			else if (pw == "")
				alert("PASSWORD를 입력해주세요.");
			else {
				var frm = document.getElementById("loginForm");
				frm.submit();
			}
		}
	}
</script>
</head>
<body>
	<form method="get" action="main.do?action=login" id="loginForm">
		<fieldset>
			<table>
				<caption>로그인하여 주세요</caption>
				<tr>
					<td style="text-align: right;">ID</td>
					<td><input type="text" name="id" id="name"></td>
				</tr>
				<tr>
					<td>PASSWORD</td>
					<td><input type="password" name="password" id="pwword"></td>
				</tr>
				<tr>
					<td></td>
					<td><input type="button" value="Login" onclick="checking();"></td>
				</tr>
			</table>
		</fieldset>
	</form>
</body>
</html>